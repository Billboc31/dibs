# ============================================
# SUPABASE CONFIGURATION
# ============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# SPOTIFY CONFIGURATION
# ============================================
NEXT_PUBLIC_SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
NEXT_PUBLIC_SPOTIFY_REDIRECT_URI=http://127.0.0.1:3001/api/auth/spotify/callback

# ============================================
# APPLICATION CONFIGURATION
# ============================================
NEXT_PUBLIC_BASE_URL=http://127.0.0.1:3001

# ============================================
# STRIPE CONFIGURATION (PAYMENT SYSTEM)
# ============================================
# Stripe Secret Key (sk_test_... for test, sk_live_... for production)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Stripe Webhook Secret (whsec_... from Stripe Dashboard)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Publishable Key (pk_test_... for test, pk_live_... for production)
# This is used on the client side if needed
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key